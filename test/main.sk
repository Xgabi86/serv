on place of red_concrete:
    if {ac} = "true":
        if block at block 1 down event-location is not air:
            set block at block 1 up event-location to red_concrete


command /ac [<text>]:
    trigger:
        if arg-1 is "true":
            set {ac} to "true"
        else if arg-1 is "false":
            set {ac} to "false"