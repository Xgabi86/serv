command /text3 [<text>] :
    trigger:
        if arg-1 = "on":
            send "&aon" to player
            set {test} to "on"
        else if arg-1 = "off":
            send "&coff" to player
            set {test} to "off"
        else if arg-1 = "info":
            send "%{test}%" to player
        else:
            send "try &aon&r or &coff" to player

