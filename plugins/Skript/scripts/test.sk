command /givememoney [<number>]:
    trigger:
        if arg-1 > 0:
            set {arg-1} to arg-1
            add {arg-1} to balance of player
            send "&etu viens de resevoir %arg-1%$" to player
        else:
            send "&céssaye avec un nombre supérieur à 0 merci petit enculé!!!" 