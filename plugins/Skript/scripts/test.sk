command /givememoney [<number>] [<player>]: 
    trigger:
        if player has permission "server.ops":
            if arg-1 > 0:
                set {arg-1} to arg-1
                add {arg-1} to balance of arg-2
                send "&etu viens de resevoir %arg-1%$" to arg-2
                send "&a%arg-2% vient de resevoir &e&l%arg-1%$" to player
            else:
                send "&céssaye avec un nombre supérieur à 0 merci petit enculé!!!" to player
        else:
            send "vous n'avez pas la permision" to player
