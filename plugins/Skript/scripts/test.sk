command /removemoney [<number>] [<player>]:
    trigger:
        if player has permission "server.ops":
            if arg-1 > 0:  
                set {arg-1} to arg-1
                set {money} to player's balance - {arg-1}
                if {money} > 0:
                    set arg-2's balance to {money}
                    send "&etu viens de perdre %arg-1%$" to player 
                else:
                    send  "&cvous n'avez pas assez d'argent" to player
            else:
                send "&céssaye avec un nombre supérieur à 0" to player
        else:
            send "vous n'avez pas la permission"
            